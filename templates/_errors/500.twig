{% extends '_layouts/message' %}
{% set title = 'Server Error'|t('app') %}
{% do seomatic.meta.seoTitle(title) %}

{% block message %}
	<h2 class="t-h2">
		{{ title }}
	</h2>
	<div class="prose">
		<p>
			{{ message ?? null
				?
				: 'An error occurred while processing your request.'|t('app') }}
		</p>
	</div>
{% endblock %}
