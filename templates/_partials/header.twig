{#

	Page Header

#}

	{# Required ---- #}
	{% set headerNav = craft.entries.section('mainNav').level(1).all() %}

{# Begin Content ----- #}

<header 
	class="relative"
>
	<div class="absolute top-0 left-0 right-0 pt-9">
		<div class="container">
		
			{% include '_includes/skipLink' %}
				
			<h1 class="t-h-m">{{ siteName }}</h1>
			
			<nav class="page-nav--container">
				<ul class="page-nav" id="pageNav">
					{% for node in headerNav %}
						<li><a class="page-nav--link" href="{{ node.url }}">{{ node.title }}</a></li>
					{% endfor %}
				</ul>
			</nav>
		
		</div>
	</div>
</header>